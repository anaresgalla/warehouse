<h1>Fornecedores</h1>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |s| %>
        <tr>
          <td><%= link_to s.corporate_name, s %></td>
          <td><%= s.city%> - <%= s.state %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>
</br></br>
<%= link_to 'Cadastrar novo fornecedor', new_supplier_path %>
</br></br>
<%= link_to 'Voltar', root_path %>
